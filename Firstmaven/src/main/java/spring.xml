<?xml version="1.0" encoding="UTF-8"?>

<!-- tag with or without annotation definition -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.0.xsd">
<!-- 	<bean id="vehicle" class="com.camcar.Firstmaven.Bike"></bean> configuration without annotation-->
<!-- 	configuration with annotation -->
	<context:component-scan base-package="com.camcar.Firstmaven"></context:component-scan>

	<bean id="tire" class="com.camcar.Firstmaven.Tire">
		<!-- 	bean properties configuration -->
		<property name="brand" value="MRF"></property>
		<!-- 		constructor injection -->
<!-- 		<constructor-arg value="MRF"></constructor-arg> -->
	</bean>
</beans>